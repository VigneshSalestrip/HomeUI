<aura:component controller="expenseControllerApex" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="title" type="String" default=" Expense"/>
    <aura:attribute name="totalexpenses" type="integer" Default="5" />
    <aura:attribute name="totalamount" type="decimal" />
    <aura:attribute name="currentMonthRecord" type="integer" />
    <aura:attribute name="lastMonthRecord" type="decimal" />
    <aura:attribute name="currentMonthAmount" type="decimal" />
    <aura:attribute name="lastMonthAmount" type="decimal" />
    <aura:attribute name="setBoolean" type="boolean" />
    <aura:attribute name="amountBoolean" type="boolean" />

    <aura:handler name="init" value="{!this}" action="{!c.doinit}" /> 
   <div class="custom">
    <lightning:card>
        <aura:set attribute="title">
            <lightning:icon iconName="custom:custom17" class="slds-p-horizontal_small" size="medium"/> 
            {! v.title }
        </aura:set>
        <!--
         <p class="slds-p-horizontal_medium">Total Expense Record :  {!v.totalexpenses} </p>  <br/>
        <p class="slds-p-horizontal_medium">Total Expense Amount : {!v.totalamount} </p>  <br/>
        -->
        <aura:if isTrue="{!v.setBoolean}">
            <p class="slds-p-horizontal_medium">Expenses This Month: {!v.currentMonthRecord} ( <lightning:icon iconName="utility:arrowup" class="green" size="x-small" alternativeText="Trending down"/> {!v.lastMonthRecord})</p>  <br/>
           <aura:set attribute="else">
            <p class="slds-p-horizontal_medium">Expenses This Month: {!v.currentMonthRecord} ( <lightning:icon iconName="utility:arrowdown" class="red" size="x-small" alternativeText="Trending down"/> {!v.lastMonthRecord})</p>  <br/>
           </aura:set>
        </aura:if>
        <aura:if isTrue="{!v.amountBoolean}">
            <p class="slds-p-horizontal_medium"> Expense Amount This Month : {!v.currentMonthAmount} ( 
                <lightning:icon iconName="utility:arrowup" class="green" size="x-small" alternativeText="Trending down"/>{!v.lastMonthAmount})
            </p>  <br/>
            <aura:set attribute="else">
            <p class="slds-p-horizontal_medium"> Expense Amount This Month : {!v.currentMonthAmount} (<lightning:icon iconName="utility:arrowdown" class="red" size="x-small" alternativeText="Trending down"/> {!v.lastMonthAmount})</p>  
            </aura:set>
        </aura:if>
       
    </lightning:card>
</div>
</aura:component>